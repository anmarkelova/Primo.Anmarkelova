<UserControl x:Class="Primo.CustomLib.KPI.Design.ProcessingItemKpi_StopTimer_Form"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Primo.CustomLib.KPI.Design" xmlns:activities="clr-namespace:Primo.CustomLib.KPI.Activities" d:DataContext="{d:DesignInstance Type=activities:ProcessingItemKpi_StopTimer}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="279*"></ColumnDefinition>
            <ColumnDefinition Width="521*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="60">
            <Label Content="Item Kpi" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="12"/>
        </Grid>
        <TextBox Text="{Binding ItemKpi}" IsReadOnly="False" BorderThickness="0" Grid.Row="0" Grid.Column="1" Margin="5,0,5,0" Height="23" TextWrapping="NoWrap" VerticalAlignment="Center" BorderBrush="#D0D7E2" />
    </Grid>
</UserControl>
